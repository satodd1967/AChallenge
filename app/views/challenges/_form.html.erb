
<%= form_for challenge do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <% if !challenge.start_date %>
        <%= f.label :start_date %>
        <%= f.date_field :start_date %>
        <br>
    <% end %>
    <%= f.label :duration, "Duration in weeks" %>
    <%= f.number_field :duration %>
    <br>
    <%= f.label :active_calorie_goal %>
    <%= f.number_field :active_calorie_goal %>
    <br>
    <%= f.label :points_worked_out %>
    <%= f.number_field :points_worked_out %>
    <br>
    <%= f.label :points_tracked_food %>
    <%= f.number_field :points_tracked_food %>
    <br>
    <%= f.label :points_met_calorie_goal %>
    <%= f.number_field :points_met_calorie_goal %>
    <br>
    <%= f.label :points_maintain_weight %>
    <%= f.number_field :points_maintain_weight %>
    <br>
    <%= f.label :points_maintain_body_fat %>
    <%= f.number_field :points_maintain_body_fat %>
    <br>
    <%= f.label :points_met_active_calorie_goal %>
    <%= f.number_field :points_met_active_calorie_goal %>
    <br>
    <%= f.submit "Submit" %>

<% end %>