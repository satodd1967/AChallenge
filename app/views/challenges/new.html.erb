<h1>Start a new Challenge</h1>

<%= form_for(@challenge) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    <br>
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
    <br>
    <br>
    <%= f.label :duration, "Duration in weeks" %>
    <%= f.number_field :duration %>
    <br>
    <br>
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>

    <%= f.submit "Submit" %>

<% end %>