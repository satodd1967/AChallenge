<h1>Welcome <%= @user.username %></h1>
<h2>Your Challenges</h2>
<ul>
  <% @user.challenges.each do |challenge| %>
    <li><%= link_to "#{challenge.name}", challenge_path(challenge) %></li>
    <li>Description<br>  <%= "-    #{challenge.description}" %><br>
    <%= link_to "View your goals", challenge_goal_path(challenge.challenge_goals.where(user_id: @user.id).first.id) %><br>
    <%= button_to "Quit Challenge", challenge_goal_path(challenge.challenge_goals.where(user: @user).first.id), :method => :delete %>
    <% if challenge.challenge_owner == @user %>
        <%= button_to "Edit Challenge", edit_challenge_path(challenge), :method => :get %>
    <% end %>
    <br>
    <br>
    <% end %></li>
</ul>
<h2>Diary Logs</h2>
<ul>
  <% @user.logs.each do |log| %>
    <li><%= link_to "#{log.log_date} - Click to edit", log_path(log) %></li>
    <li><%= "Worked Out: #{log.worked_out}" %></li>
    <li><%= "Tracked Food: #{log.tracked_food}" %></li>
    <li><%= "Weight: #{log.weight}" %></li>
    <li><%= "Body Fat %: #{to_percent(log.body_fat)}" %></li>
    <li><%= "Active Calories: #{log.active_calories}" %></li>
    <li><%= "Calories: #{log.calories}" %></li>
    <% log.user.log_scores.where(log_id: log.id).each do |ls| %>
        <li><%= "#{ls.challenge_goal.challenge.name} - Total Points - #{ls.total_points}" %></li>
    <% end %>
    <br>
  <% end %>
</ul>


