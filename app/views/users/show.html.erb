<%= link_to "All Challenges", challenges_path, method: "get" %>
<br>
<%= link_to "Create a new challenge!", new_challenge_path, method: "get" %>
<br>
<%= link_to "Create a new log", new_log_path, method: "get" %>
<br>
<br>
<h1>Welcom <%= @user.username %></h1>

<h2>Your Challenges</h2>
<ul>
  <% @user.challenges.each do |challenge| %>
    <li><%= link_to "#{challenge.name} Challenge #{"*Owner*" if challenge.challenge_owner == @user}", challenge_path(challenge) %></li>
    <li><%= "#{challenge.description}" %></li>
    <br>
  <% end %>
</ul>
<br>
<h2>Logs</h2>
<ul>
  <% @user.logs.each do |log| %>
    <li><%= link_to "#{log.log_date}", log_path(log) %></li>
    <li><%= "Worked Out: #{log.worked_out}" %></li>
    <li><%= "Tracked Food: #{log.tracked_food}" %></li>
    <li><%= "Weight: #{log.weight}" %></li>
    <li><%= "Body Fat: #{log.body_fat}" %></li>
    <li><%= "Active Calories: #{log.active_calories}" %></li>
    <li><%= "Calories: #{log.calories}" %></li>
    <% log.user.log_scores.where(log_id: log.id).each do |ls| %>
        <li><%= "#{ls.challenge_goal.challenge.name} - Total Points - #{ls.total_points}" %></li>
    <% end %>
    <br>
  <% end %>
  </ul>

<%= link_to "Logout", logout_path, method: "delete" %>


